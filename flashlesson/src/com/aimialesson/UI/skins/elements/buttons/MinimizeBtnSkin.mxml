<?xml version="1.0" encoding="utf-8"?>

<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" 
             xmlns:fb="http://ns.adobe.com/flashbuilder/2009"  alpha.disabled="0.5" height="20" >
    
    <!-- host component -->
    <fx:Metadata>
        <![CDATA[ 
        [HostComponent("spark.components.Button")]
        ]]>
    </fx:Metadata>
	<fx:Script>
		<![CDATA[
			import com.aimialesson.model.Texts;
		]]>
	</fx:Script>
    
    <!-- states -->
    <s:states>
        <s:State name="up" />
        <s:State name="over" />
        <s:State name="down" />
        <s:State name="disabled" />
    </s:states>
    
	<s:Group>
		<s:BitmapImage source="@Embed('flashassets/minimize.png')" x="0" y="-3" />
		<s:RichText text="{Texts.getInstance().getText(Texts.MINIMIZE)}" x="24" styleName="ButtonLabelStyle" y="-3"/>
	</s:Group>
	<s:Group includeIn="over">
		<s:BitmapImage source="@Embed('flashassets/minimize_hover.png')" x="0" y="-3" />
		<s:RichText text="{Texts.getInstance().getText(Texts.MINIMIZE)}" x="24" styleName="ButtonLabelStyle" y="-3"/>
	</s:Group>
		
    
</s:SparkSkin>
