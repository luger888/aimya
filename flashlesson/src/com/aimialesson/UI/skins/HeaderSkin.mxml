<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:elements="com.aimialesson.UI.views.elements.*" xmlns:elements1="com.aimialesson.UI.skins.elements.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.aimialesson.UI.views.HeaderUI")]
	</fx:Metadata>
	<fx:Script>
		<![CDATA[
			import com.aimialesson.UI.skins.elements.StartSessionBtnSkin;
		]]>
	</fx:Script>
	<fx:Script>
		<![CDATA[
			import com.aimialesson.UI.skins.elements.EnterBtnSkin;
		]]>
	</fx:Script>
	<fx:Script>
		<![CDATA[
			import com.aimialesson.model.User;
		]]>
	</fx:Script>
	<s:Group width="100%"  height="30" >
		<!--s:layout>
			<s:HorizontalLayout verticalAlign="top" />
		</s:layout-->
		<s:VGroup left="0" gap="15">
			<s:HGroup>
				<s:RichText text="{User.getInstance().partnerRole == User.STUDENT?'ONLINE STUDENT:':'ONLINE INSTRUCTOR:'}" styleName="HeaderStyle" />
				<s:RichText id="partnerUserName" text="{User.getInstance().partnerName}" styleName="SmallNameStyle"/>
				<elements:Lamp id="partnerLamp" />
			</s:HGroup>
			<s:HGroup>
				<s:RichText text="Remaining Time:" styleName="TimeTextStyle"/>
				<s:RichText text="15" id="timeLeft" styleName="TimeValueStyle"  fontFamily="Arial"/>
				<s:RichText text="min" styleName="TimeMinStyle"/>
			</s:HGroup>	
		</s:VGroup>
		<!--mx:Spacer width="50%" /-->
		<s:Group height="100" horizontalCenter="0">
			<s:layout>
				<s:HorizontalLayout verticalAlign="top"/>
			</s:layout>
			<s:RichText id="totalTimeRT" text="Total Lesson Time:" styleName="TimeTextStyle" />
			<s:Group height="{totalTime.height}">
				<s:BitmapImage source="@Embed('flashassets/2time_calculate__icon.png')" y="-10" horizontalCenter="0"/>
				<s:RichText text="60" id="totalTime" styleName="TimeValueStyle"  horizontalCenter="0"/>
				<s:BitmapImage source="@Embed('flashassets/1time_calculate__icon.png')" y="15" horizontalCenter="0"/>				
			</s:Group>
			<s:RichText text="min" styleName="TimeMinStyle" />
			<s:Button id="enterBtn" skinClass="com.aimialesson.UI.skins.elements.EnterBtnSkin"/>
		</s:Group>
		<!--mx:Spacer width="50%" /-->
		<s:Button skinClass="com.aimialesson.UI.skins.elements.StartSessionBtnSkin" id="startSessionBtn" right="0" />
	</s:Group>
</s:Skin>
