<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:elements="com.aimialesson.UI.views.elements.*" >
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.aimialesson.UI.views.UploadUI")]
	</fx:Metadata>
	<fx:Script>
		<![CDATA[
			import com.aimialesson.UI.skins.elements.PresentationUploadBtnSkin;
			import com.aimialesson.model.Main;
			import com.aimialesson.model.Presentation;
		]]>
	</fx:Script>
	<fx:Declarations>
		<mx:NumberFormatter id="numberFormatter" />	
	</fx:Declarations>
	<s:Group  width="100%" height="100%" >
		<s:BitmapImage id="presantationBG" source="@Embed('flashassets/lesson_presentation_background.png')" left="0" />
		<s:Button id="uploadBtn" label="Upload file" right="-3" bottom="-30" skinClass="com.aimialesson.UI.skins.elements.PresentationUploadBtnSkin" useHandCursor="true" buttonMode="true" enabled="{Main.getInstance().session_started}"/>
		<elements:PresentationProgressBar id="progressBar" left="0" bottom="-30" width="{presantationBG.width - uploadBtn.width}"/>
	</s:Group>
	
</s:Skin>
