<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx"
		xmlns:views="com.aimialesson.UI.views.*"
		xmlns:elements="com.aimialesson.UI.views.elements.*"  >
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.aimialesson.UI.views.MainUI")]
	</fx:Metadata>
	<fx:Script>
		<![CDATA[
			import com.aimialesson.UI.skins.elements.MinimizeBtnSkin;
			import com.aimialesson.model.Main;
		]]>
	</fx:Script>
	<!--s:Scroller  height="100%" width="100%" horizontalScrollPolicy="off" verticalScrollPolicy="on"-->
		<s:Group  width="870" >
			<s:Rect width="870" height="1190">
				<s:fill>
					<s:SolidColor color="0xffffff" />
				</s:fill>
			</s:Rect>
			<!--s:Group width="870" height="1190">
				<s:BitmapImage source="@Embed('flashassets/t_my_lessons_on_the_air.jpg')" y="-130" x="-287"/>
			</s:Group-->
			<s:VGroup bottom="33" top="21" gap="10" width="100%" paddingRight="33" paddingLeft="33">
				<s:BitmapImage source="@Embed('flashassets/1page_middle_separator.png')" width="100%"/>
				<mx:Spacer height="10" />
				<s:Group width="100%"  height="30" >
					<s:VGroup left="0" gap="15">
						<views:MainUIContainer id="onlineStudentContainer" />
						<views:MainUIContainer id="remainingTimeContainer" />
					</s:VGroup>
					<views:MainUIContainer id="totalTimeContainter" />
					<s:Button skinClass="com.aimialesson.UI.skins.elements.StartSessionBtnSkin" id="startSessionBtn" right="0" includeInLayout="{!Main.getInstance().session_started}" visible="{!Main.getInstance().session_started}" />
					<s:Button skinClass="com.aimialesson.UI.skins.elements.StopSessionBtnSkin" id="stopSessionBtn" right="0" includeInLayout="{Main.getInstance().session_started}" visible="{Main.getInstance().session_started}"/>
					<s:Button skinClass="com.aimialesson.UI.skins.elements.MaximizeBtnSkin" id="goFSBtn" right="0" top="30" />
				</s:Group>
				<mx:Spacer height="10" />
				<s:HGroup width="100%" gap="15">
					<s:Group height="100%">
						<views:MainUIContainer id="presentationTitleContainer" width="{videoChatContainer.width}" top="5"/>
						<views:MainUIContainer id="videoChatContainer"  bottom="0"/>
					</s:Group>
					<views:MainUIContainer id="tPresentationContainer" width="100%" bottom="0" top="0"/>
				</s:HGroup>
				<s:VGroup gap="30" width="100%">
					<s:BitmapImage source="@Embed('flashassets/1page_middle_separator.png')" width="100%" />
					<s:BitmapImage source="@Embed('flashassets/2page_middle_separator.png')" width="100%" />
				</s:VGroup>
				<views:MainUIContainer id="notesContainer" width="100%" />
				<!--s:TextArea id="debugger"  width="100%" height="200"/-->
			</s:VGroup>
		</s:Group>
	<!--/s:Scroller-->
