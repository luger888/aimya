<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.aimialesson.UI.views.PresentationUI")]
	</fx:Metadata>
	<fx:Script>
		<![CDATA[
			import com.aimialesson.UI.skins.elements.PresentationArrowUpBtnSkin;
		]]>
	</fx:Script>
	<fx:Script>
		<![CDATA[
			import com.aimialesson.model.Presentation;
		]]>
	</fx:Script>
	<s:Group width="100%" height="100%" >
		<mx:Image id="currentImage" source="{Presentation.getInstance().currentImageURL}" width="100%" height="100%" maintainAspectRatio="true"/>
		<s:Button id="previusBtn" label="Previus" skinClass="com.aimialesson.UI.skins.elements.PresentationArrowDownBtnSkin" right="10" bottom="10" useHandCursor="true"/>
		<s:Button id="nextBtn" label="Next" skinClass="com.aimialesson.UI.skins.elements.PresentationArrowUpBtnSkin" right="10" top="10" useHandCursor="true"/>
	</s:Group>
</s:Skin>
