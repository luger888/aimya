<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.aimialesson.UI.views.PresentationUI")]
	</fx:Metadata>
	<fx:Script>
		<![CDATA[
			import com.aimialesson.model.Presentation;
		]]>
	</fx:Script>
	<s:VGroup width="100%">
		<mx:Image id="currentImage" source="{Presentation.getInstance().currentImageURL}" width="300" height="300" maintainAspectRatio="true"/>
		<s:Group width="100%">
			<s:HGroup horizontalCenter="0">
				<s:Button id="previusBtn" label="Previus"/>
				<s:Button id="nextBtn" label="Next"/>
			</s:HGroup>
		</s:Group>
	</s:VGroup>
</s:Skin>
