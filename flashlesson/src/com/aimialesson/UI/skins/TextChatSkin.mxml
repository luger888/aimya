<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx" >
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.aimialesson.UI.views.TextChatUI")]
	</fx:Metadata>
	<fx:Script>
		<![CDATA[
			import com.aimialesson.model.Chat;
		]]>
	</fx:Script>
	<s:VGroup width="100%" height="100%" >
		<s:TextArea id="chatArea" width="100%" height="100%" text="{Chat.getInstance().text}" />
		<s:HGroup width="100%">
			<s:TextInput id="messageInput" text="" width="100%" />
			<s:Button id="sendBtn" label="Send"/>
		</s:HGroup>
	</s:VGroup>
	
</s:Skin>
